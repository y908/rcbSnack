
<h2 id = "snack">What Snack or Beverage Would You Like?</h2>
<form method="POST" action="/create" class="button-size">
  <textarea type="text" name="plan"></textarea><br>
  <button type="submit" class="btn btn-dark btn-lg">Request!</button>
</form>
<br>
<ul>
  {{#each plans}}
    <li>
      <p>
        {{this.id}}. {{this.plan}}
      </p>
    </li>
  {{/each}}
</ul>

<h2 id = "snack">Update Your Request</h2>
<form action="/update?_method=PUT" method="POST" class="button-size">
  <input type="text" name="id" placeholder= "Number">
  <textarea type="text" name="plan" placeholder="Food or Beverage Item"></textarea><br>
  <button type="submit" class="btn btn-dark btn-lg">Submit</button>
</form>